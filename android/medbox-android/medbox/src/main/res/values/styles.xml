<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ItemCardIcon">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:contentDescription">@string/todo</item>
    </style>

    <style name="ItemCardTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#3a4a5a</item>
        <item name="android:layout_marginStart">11dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemCardDescr">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">4sp</item>

        <item name="android:layout_marginStart">11dp</item>
        <item name="android:textColor">#737373</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ItemCardChild">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">17dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ItemCardArrowRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="ArticleTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="SomeTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#484848</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
    </style>

    <style name="ArticleDescription">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ArticleImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:scaleX">1.1</item>
        <item name="android:scaleY">1.1</item>
    </style>

    <style name="ArticleContent">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">#4a4a4a</item>
    </style>

    <style name="CategoryTitle">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="CategoryDescription">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">#404040</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TitleImageSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="SocialBtn">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="BlueBtn">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainStatText2">
        <item name="android:lines">2</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">#737373</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MainStatText">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#3a4a5a</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainStatImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="MedCardInputText">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListItemSeparator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#e8eef4</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ListItemImage">
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#3a4a5a</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListItemDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">#737373</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="ListItemMore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">12dp</item>
    </style>

    <style name="ButtonGray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/button_add_medcard</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#8693a0</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MedCardEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MedCardSimpleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">#737373</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MedCardSimpleText2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textColor">#3c8be6</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsTextItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@drawable/arrow_2</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textColor">#3a4a5a</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
