<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent"
    android:paddingBottom="@dimen/card_content_padding"
    android:paddingLeft="@dimen/card_content_padding"
    android:paddingRight="@dimen/card_content_padding">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_serial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="@dimen/default_card_elevation"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="@dimen/content_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/series_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/series_name"
                android:src="@drawable/header"/>

            <TextView
                android:id="@+id/series_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:paddingBottom="@dimen/card_content_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>